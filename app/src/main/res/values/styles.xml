    </style>

    <style name="defaultInput">
        <item name="android:textSize">@dimen/text_size_16_dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textDirection">locale</item>
        <item name="boxBackgroundColor">@color/md_grey_200</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/md_grey_500</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="counterTextColor">@color/grey_subtext</item>
        <item name="errorIconTint">@color/colorAccent</item>
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/grey_subtext</item>
    </style>

    <style name="AppApplyButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="HeaderTitle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/margin_18_dp</item>
        <item name="android:fontWeight" tools:ignore="NewApi">700</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="HeaderMenu" parent="HeaderTitle">
        <item name="android:textSize">@dimen/margin_16_dp</item>
    </style>

    <declare-styleable name="CustomHeaderView">
        <attr name="leftDrawable" format="reference" />
        <attr name="leftTitle" format="string" />
        <attr name="rightDrawable" format="reference" />
        <attr name="rightDrawable2" format="reference" />
        <attr name="rightTitle" format="string" />
        <attr name="title" format="string" />
        <attr name="is_header_chat" format="boolean" />
        <attr name="header_background" format="color" />
        <attr name="rightTitleColor" format="color" />
    </declare-styleable>
</resources>

