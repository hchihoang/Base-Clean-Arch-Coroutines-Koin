<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_medium</item>
    </style>

    <style name="font_style_normal" parent="regular_text_form">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="regular_text_form">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="roboto_bold_12dp">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_12_dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">14dp</item>
    </style>

    <style name="roboto_bold_14dp">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_14_dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="roboto_bold_16dp">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_16_dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">17dp</item>
    </style>

    <style name="roboto_bold_18dp">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_18_dp</item>
